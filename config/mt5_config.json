{
  "mt5": {
    "login": "${MT5_LOGIN}",
    "password": "${MT5_PASSWORD}",
    "server": "${MT5_SERVER}",
    "path": "${MT5_PATH}",
    "timeout": 60000,
    "bridge_host": "0.0.0.0",
    "bridge_port": 5000,
    "callback_url": "http://localhost:8080/mt5/callback"
  },
  "symbols": [
    "EURUSD",
    "GBPUSD", 
    "USDJPY",
    "AUDUSD",
    "USDCHF",
    "NZDUSD",
    "USDCAD",
    "EURJPY",
    "GBPJPY",
    "AUDJPY"
  ],
  "symbol_mapping": {
    "EUR/USD": "EURUSD",
    "GBP/USD": "GBPUSD",
    "USD/JPY": "USDJPY",
    "AUD/USD": "AUDUSD",
    "USD/CHF": "USDCHF",
    "NZD/USD": "NZDUSD",
    "USD/CAD": "USDCAD",
    "EUR/JPY": "EURJPY",
    "GBP/JPY": "GBPJPY",
    "AUD/JPY": "AUDJPY"
  },
  "timeframe_mapping": {
    "1m": "M1",
    "5m": "M5", 
    "15m": "M15",
    "30m": "M30",
    "1h": "H1",
    "4h": "H4",
    "1d": "D1"
  },
  "trading": {
    "magic_number": 12345,
    "slippage": 3,
    "max_spread": 5,
    "min_lot_size": 0.01,
    "max_lot_size": 10.0,
    "lot_step": 0.01,
    "default_deviation": 20,
    "order_timeout": 30000,
    "position_timeout": 300000
  },
  "risk_management": {
    "max_risk_per_trade": 0.02,
    "max_daily_risk": 0.05,
    "max_positions": 10,
    "max_positions_per_symbol": 3,
    "correlation_limit": 0.7,
    "drawdown_limit": 0.10
  },
  "connection": {
    "retry_attempts": 3,
    "retry_delay": 5000,
    "heartbeat_interval": 30000,
    "reconnect_interval": 60000,
    "market_data_timeout": 10000
  },
  "logging": {
    "level": "INFO",
    "file": "/var/log/mt5_bridge.log",
    "max_size": "10MB",
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
}
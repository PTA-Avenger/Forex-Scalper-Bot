{
  "trading": {
    "symbols": [
      "EUR/USD",
      "GBP/USD",
      "USD/JPY",
      "AUD/USD",
      "USD/CHF",
      "NZD/USD",
      "USD/CAD"
    ],
    "timeframes": ["1m", "5m", "15m"],
    "max_positions": 10,
    "paper_trading": true,
    "min_trade_size": 0.01,
    "max_trade_size": 1.0,
    "default_leverage": 50,
    "trading_hours": {
      "start": "00:00",
      "end": "23:59",
      "timezone": "UTC"
    },
    "market_sessions": {
      "sydney": {
        "start": "21:00",
        "end": "06:00"
      },
      "tokyo": {
        "start": "23:00",
        "end": "08:00"
      },
      "london": {
        "start": "07:00",
        "end": "16:00"
      },
      "new_york": {
        "start": "12:00",
        "end": "21:00"
      }
    }
  },
  "broker": {
    "type": "oanda",
    "api_key": "${OANDA_API_KEY}",
    "account_id": "${OANDA_ACCOUNT_ID}",
    "environment": "practice",
    "base_url": "https://api-fxpractice.oanda.com",
    "stream_url": "https://stream-fxpractice.oanda.com",
    "timeout_ms": 5000,
    "max_retries": 3,
    "retry_delay_ms": 1000,
    "rate_limit": {
      "requests_per_second": 100,
      "burst_limit": 200
    }
  },
  "risk": {
    "max_daily_drawdown": 0.05,
    "max_position_size": 0.02,
    "kelly_fraction": 0.25,
    "correlation_limit": 0.7,
    "var_confidence_level": 0.95,
    "var_lookback_days": 30,
    "max_positions_per_symbol": 3,
    "max_total_exposure": 0.1,
    "stop_loss_multiplier": 2.0,
    "take_profit_multiplier": 3.0,
    "trailing_stop_enabled": true,
    "emergency_stop_loss": 0.1
  },
  "strategies": {
    "ema_crossover": {
      "enabled": true,
      "weight": 0.4,
      "parameters": {
        "fast_ema": 12,
        "slow_ema": 26,
        "macd_fast": 12,
        "macd_slow": 26,
        "macd_signal": 9,
        "volume_threshold": 1.5,
        "min_spread": 0.5,
        "max_spread": 3.0,
        "confidence_threshold": 0.7
      },
      "symbols": ["EUR/USD", "GBP/USD", "USD/JPY"],
      "timeframes": ["1m", "5m"],
      "active_hours": {
        "start": "07:00",
        "end": "17:00"
      }
    },
    "mean_reversion": {
      "enabled": true,
      "weight": 0.35,
      "parameters": {
        "rsi_period": 14,
        "rsi_oversold": 30,
        "rsi_overbought": 70,
        "bb_period": 20,
        "bb_std_dev": 2.0,
        "bb_squeeze_threshold": 0.1,
        "mean_reversion_threshold": 0.02,
        "confidence_threshold": 0.65
      },
      "symbols": ["EUR/USD", "GBP/USD", "AUD/USD"],
      "timeframes": ["5m", "15m"],
      "active_hours": {
        "start": "08:00",
        "end": "16:00"
      }
    },
    "atr_breakout": {
      "enabled": true,
      "weight": 0.25,
      "parameters": {
        "atr_period": 14,
        "breakout_multiplier": 2.0,
        "lookback_period": 20,
        "volume_confirmation": true,
        "momentum_threshold": 0.5,
        "consolidation_period": 10,
        "confidence_threshold": 0.75
      },
      "symbols": ["USD/JPY", "USD/CHF", "USD/CAD"],
      "timeframes": ["1m", "5m"],
      "active_hours": {
        "start": "12:00",
        "end": "21:00"
      }
    }
  },
  "ai_services": {
    "price_predictor": {
      "enabled": true,
      "url": "http://price-predictor:5001",
      "timeout_ms": 3000,
      "cache_ttl": 60,
      "models": {
        "lstm": {
          "enabled": true,
          "weight": 0.4,
          "confidence_threshold": 0.6
        },
        "xgboost": {
          "enabled": true,
          "weight": 0.35,
          "confidence_threshold": 0.65
        },
        "ensemble": {
          "enabled": true,
          "weight": 0.25,
          "confidence_threshold": 0.7
        }
      },
      "prediction_horizon": 1,
      "retrain_interval_hours": 24
    },
    "sentiment_analyzer": {
      "enabled": true,
      "url": "http://sentiment-analyzer:5002",
      "timeout_ms": 5000,
      "cache_ttl": 300,
      "sources": {
        "news": {
          "enabled": true,
          "weight": 0.6,
          "update_interval_minutes": 15
        },
        "social": {
          "enabled": true,
          "weight": 0.4,
          "update_interval_minutes": 5
        }
      },
      "sentiment_threshold": 0.1,
      "impact_multiplier": 0.2
    }
  },
  "database": {
    "postgres": {
      "host": "postgres",
      "port": 5432,
      "database": "forex_bot",
      "username": "forex_user",
      "password": "forex_password",
      "pool_size": 10,
      "max_overflow": 20,
      "pool_timeout": 30,
      "pool_recycle": 3600
    },
    "influxdb": {
      "host": "influxdb",
      "port": 8086,
      "database": "market_data",
      "username": "admin",
      "password": "admin_password",
      "retention_policy": "30d",
      "batch_size": 1000,
      "flush_interval": 10
    },
    "redis": {
      "host": "redis",
      "port": 6379,
      "database": 0,
      "password": null,
      "pool_size": 10,
      "socket_timeout": 5,
      "socket_connect_timeout": 5
    }
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": {
      "enabled": true,
      "path": "logs/forex_bot.log",
      "max_size": "100MB",
      "backup_count": 10,
      "rotation": "daily"
    },
    "console": {
      "enabled": true,
      "colored": true
    },
    "syslog": {
      "enabled": false,
      "host": "localhost",
      "port": 514
    }
  },
  "monitoring": {
    "metrics": {
      "enabled": true,
      "port": 8080,
      "path": "/metrics"
    },
    "health_check": {
      "enabled": true,
      "port": 8080,
      "path": "/health"
    },
    "alerts": {
      "telegram": {
        "enabled": false,
        "bot_token": "${TELEGRAM_BOT_TOKEN}",
        "chat_id": "${TELEGRAM_CHAT_ID}"
      },
      "email": {
        "enabled": false,
        "smtp_host": "smtp.gmail.com",
        "smtp_port": 587,
        "username": "${EMAIL_USERNAME}",
        "password": "${EMAIL_PASSWORD}",
        "to_addresses": ["admin@example.com"]
      },
      "webhook": {
        "enabled": false,
        "url": "${ALERT_WEBHOOK_URL}",
        "timeout_ms": 5000
      }
    }
  },
  "performance": {
    "optimization": {
      "enable_threading": true,
      "thread_pool_size": 8,
      "enable_caching": true,
      "cache_size": 10000,
      "enable_compression": true
    },
    "latency": {
      "target_order_latency_ms": 10,
      "target_data_latency_ms": 1,
      "measurement_interval": 60
    },
    "memory": {
      "max_memory_usage_mb": 2048,
      "gc_threshold": 0.8,
      "enable_memory_profiling": false
    }
  },
  "security": {
    "encryption": {
      "enabled": true,
      "algorithm": "AES-256-GCM",
      "key_rotation_days": 30
    },
    "authentication": {
      "jwt_secret": "${JWT_SECRET}",
      "jwt_expiry_hours": 24,
      "api_key_required": true
    },
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 1000,
      "burst_limit": 2000
    }
  },
  "backtesting": {
    "enabled": true,
    "data_path": "data/historical",
    "output_path": "results/backtest",
    "commission": 0.0001,
    "slippage": 0.0001,
    "initial_capital": 10000,
    "start_date": "2023-01-01",
    "end_date": "2024-01-01",
    "benchmark": "EUR/USD",
    "metrics": [
      "total_return",
      "sharpe_ratio",
      "max_drawdown",
      "win_rate",
      "profit_factor",
      "calmar_ratio"
    ]
  }
}
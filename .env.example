# Forex Scalping Bot Environment Configuration
# Copy this file to .env and update with your actual values

# Trading Configuration
ENVIRONMENT=development
LOG_LEVEL=info
PAPER_TRADING=true

# Broker API Configuration
OANDA_API_KEY=your_oanda_api_key_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here
OANDA_ENVIRONMENT=practice

# MetaTrader Configuration (optional)
MT_SERVER=your_mt_server
MT_LOGIN=your_mt_login
MT_PASSWORD=your_mt_password

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=forex_bot
POSTGRES_USER=forex_user
POSTGRES_PASSWORD=your_secure_postgres_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# InfluxDB Configuration
INFLUX_HOST=influxdb
INFLUX_PORT=8086
INFLUXDB_PASSWORD=your_influx_password

# AI Services Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
# Available models: gemini-1.5-pro, gemini-1.5-flash, gemma-2-27b-it, gemma-2-9b-it, gemma-3-27b-it, gemma-3n-e4b-it
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# FXCM Broker Configuration (Primary)
FXCM_ACCESS_TOKEN=your_fxcm_access_token_here
FXCM_SERVER_TYPE=demo
# Server types: demo, real

# MT5 Bridge Configuration (Alternative - Optional)
MT5_LOGIN=your_mt5_login_number
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_mt5_server
MT5_PATH=/path/to/mt5/terminal
# Enable MT5 service with: docker-compose --profile mt5 up

# TradingView Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_key

# Security Configuration
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Monitoring and Alerting
SLACK_WEBHOOK_URL=your_slack_webhook_url
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Performance Tuning
MAX_POSITIONS=10
MAX_DAILY_DRAWDOWN=0.05
DEFAULT_POSITION_SIZE=0.01

# Feature Flags
ENABLE_AI_PREDICTIONS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_NEWS_FEED=true
ENABLE_SOCIAL_TRADING=false